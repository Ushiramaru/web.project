<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>/WEB-INF/s.jsp</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.epam.conference.controller.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>AccountPermissionFilter</filter-name>
        <filter-class>com.epam.conference.controller.filter.AccountPermissionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AccountPermissionFilter</filter-name>
        <url-pattern>/controller</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>StandardLocaleInstallationFilter</filter-name>
        <filter-class>com.epam.conference.controller.filter.StandardLocaleInstallationFilter</filter-class>
        <init-param>
            <param-name>language</param-name>
            <param-value>en_EN</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>StandardLocaleInstallationFilter</filter-name>
        <url-pattern>//WEB-INF/start.jsp</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>com.epam.conference.controller.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>
<!--    <servlet-mapping>-->
<!--        <servlet-name>Controller</servlet-name>-->
<!--        <url-pattern>*.css</url-pattern>-->
<!--    </servlet-mapping>-->
</web-app>